{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "noImplicitAny": true,
    "sourceMap": false,
    "importHelpers": true,
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*", "*"]
    }
  }
}
